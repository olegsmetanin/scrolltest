{{#extend "masterpage"}}
	{{#content "container"}}

		<div class="section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						{{title}}
					</div>
				</div>
			</div>
		</div>

		</div><!-- /section -->
		{{#allcategories}}
			{{#is category "blogs"}}

				{{#filterAndSortPages pages ../../../period_start ../../../period_end ../../../../index_start ../../../../index_end ../../../../select_tag}}

					{{#any this}}

						{{#each this}}

							<div class="section {{odd @index "" "section-colored"}}">
								<div class="container">
									<div class="row">
										<div class="col-lg-12">

											<!-- blog entry -->

											<h1><a href="/{{path}}/{{basename}}.html">{{title}}</a></h1>
											<h5><span class="glyphicon glyphicon-time"></span> Posted by {{author}} on {{formatDate date  "%F %I:%M%p" }}</h5>

											{{renderpage this}}

											<br>

											{{#each tags}}

												<a href="/tags/{{this}}.html"> <span class="label label-default"> {{this }}</span></a>

											{{/each }}

										</div>
									</div>
									<!-- blog entry end -->

								</div> <!-- /container -->

							</div><!-- /section -->

						{{/each}}


					{{else}}

						No records

					{{/any}}

				{{/filterAndSortPages}}
			{{/is}}
		{{/allcategories}}

		<div class="section">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						{{#isdefined previous}}
							<a href="/{{path}}/{{previous}}.html"> <span class="label label-default">Previous</span></a>
						{{/isdefined}}
						{{#isdefined next}}
							<a href="/{{path}}/{{next}}.html"> <span class="label label-default">Next</span></a>
						{{/isdefined}}
					</div>
				</div>
			</div>
		</div>


	{{/content}}
{{/extend}}
